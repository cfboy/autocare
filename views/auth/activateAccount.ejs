<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        <%= lingua.completeAccount%>
    </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/feather/feather.css">
    <link rel="stylesheet" href="../../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../css/register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../../vendors/select2/select2.min.css">
    <link rel="stylesheet" href="../../vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-8 mx-auto">
                        <div class="text-left py-4 px-4 px-sm-4">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex flex-nowrap">
                                                <div class="w-100">
                                                    <%= lingua.completeAccount%>
                                                </div>


                                                <div class="brand-logo text-center mb-1 w-100">
                                                    <img src="/images/charlieBoy/CB-5.jpg" alt="logo"
                                                        style="width: 50% !important;">
                                                </div>

                                                <div class="w-100">
                                                    <% if(user) { %>
                                                    <a class="btn btn-icon float-end p-0 m-1" id="logout"
                                                        href="/logout">
                                                        <i class="fas fa-sign-out-alt text-primary m-1 mb-0 mt-0"></i>
                                                    </a>
                                                    <a class="btn btn-icon float-end p-0 m-1" id="close-registration"
                                                        href="/account">
                                                        <i class="fa-solid fa-home text-primary m-1 mb-0 mt-0"></i>
                                                    </a>
                                                    <% } else { %>

                                                    <a class="btn btn-outline-primary btn-icon-text float-end"
                                                        id="close-registration" href="/login">
                                                        <%= lingua.login%> <i
                                                            class="fa-solid fa-arrow-right-to-bracket m-1 mb-0 mt-0"></i>
                                                    </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <% if (messages.error) { %>
                                                <p class="error">
                                                    <%= messages.error %>
                                                </p>
                                                <% } %>

                                                <% if (messages.info) { %>
                                                <p class="info">
                                                    <%= messages.info %>
                                                </p>
                                                <% } %>
                                                <% if (messages.warning) { %>
                                                <p class="warning">
                                                    <%= messages.warning %>
                                                </p>
                                                <% } %>
                                            </div>
                                            <div class="" id="addCar-div">
                                                <form id="form-register" class="pt-3" action="/activateAccount"
                                                    autocomplete="off" method="post" onsubmit="disableSubmitBtn()">
                                                    <input type="text" id="id" name="id" value="<%= user?.id%>"
                                                        hidden />
                                                    <input type="text" id="token" name="token" value="<%= token%>"
                                                        hidden />
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label class="required"
                                                                    for="email"><%= lingua.user.email%></label>
                                                                <input type="email" id="email" name="email"
                                                                    class="form-control form-control-lg" disabled
                                                                    value="<%= user?.email%>" autocomplete="off"
                                                                    placeholder="example@gmail.com" required />

                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <%- include('../user/passwordField.ejs'); %>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="firstName"
                                                                    class="required"><%= lingua.user.firstName%></label>

                                                                <input type="text" id="firstName" name="personalInfo.firstName"
                                                                    class="form-control mb-3 form-control-lg" value="<%= user?.personalInfo?.firstName%>"
                                                                    placeholder="<%= lingua.user.firstName%>"
                                                                    required />
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="lastName"
                                                                    class="required"><%= lingua.user.lastName%></label>

                                                                <input type="text" id="lastName" name="personalInfo.lastName"
                                                                    class="form-control mb-3 form-control-lg" value="<%= user?.personalInfo?.lastName%>"
                                                                    placeholder="<%= lingua.user.lastName%>" required />
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label for="phoneNumber"
                                                                    class="required"><%= lingua.user.phoneNumber%></label>

                                                                <input type="tel" id="phoneNumber" name="personalInfo.phoneNumber"
                                                                    class="form-control mb-3 form-control-lg" value="<%= user?.personalInfo?.phoneNumber%>"
                                                                    placeholder="XXX-XXX-XXXX" required />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="mt-3">
                                                            <button id="submit-btn"
                                                                class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn float-end"
                                                                type="submit"><%= lingua.activate%></button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <%- include('../partials/footer.ejs'); %>

        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <!-- <script src="../../js/register.js"></script> -->
    <script src="./js/jquery.cookie.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="../../vendors/select2/select2.min.js"></script>
    <script src="../../js/select2.js"></script>
    <script src="../js/helper-functions.js"></script>

    <!-- End custom js for this page-->
    <script>
        jQuery(document).ready(function () { jQuery("#phoneNumber").mask("999-999-9999"); });

        function disableSubmitBtn() {
            $('#submit-btn').prop('disabled', true);
        };
    </script>
</body>


</html>