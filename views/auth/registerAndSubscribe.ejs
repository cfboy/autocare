<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-8 mx-auto">
                        <div class="text-left py-4 px-4 px-sm-4">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex flex-nowrap">
                                                <div class="w-100"></div>
                                                <div class="brand-logo text-center mb-1 w-100">
                                                    <img src="/images/charlieBoy/CB-5.jpg" alt="logo"
                                                        style="width: 50% !important;">
                                                </div>

                                                <div class="w-100">
                                                    <% if(user) { %>
                                                    <input id="userExist" name="userExist" value="true" hidden />
                                                    <a class="btn btn-outline-primary btn-icon-text float-end"
                                                        id="close-registration" href="/account">
                                                        <%= lingua.home%> <i class="fa-solid fa-home m-1 mb-0 mt-0"></i>
                                                    </a>
                                                    <% } else { %>
                                                    <input id="userExist" name="userExist" value="false" hidden />

                                                    <a class="btn btn-outline-primary btn-icon-text float-end"
                                                        id="close-registration" href="/login">
                                                        <%= lingua.login%> <i
                                                            class="fa-solid fa-arrow-right-to-bracket m-1 mb-0 mt-0"></i>
                                                    </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <h4 class="card-title text-center mb-2">
                                                <%= lingua.subscribe%>
                                            </h4>
                                            <div id="loading-div" class="text-small text-wrap">
                                            </div>
                                            <!-- Add Car Division with form fields -->
                                            <div class="d-none" id="addCar-div">
                                                <form id="form-subscriptions" class="pt-3" method="post">
                                                    <div class="row">
                                                        <h5><i class="fa-solid fa-1 list-number"></i>
                                                            <%= lingua.user.email%>
                                                        </h5>
                                                        <hr>
                                                        <div class="col-lg-12">
                                                            <% if(!user) { %>
                                                            <div class="form-group">
                                                                <label class="required"
                                                                    for="email"><%= lingua.user.email%></label>
                                                                <input type="email" id="email" name="email"
                                                                    onfocusout="validateEmail()"
                                                                    class="form-control form-control-lg"
                                                                    placeholder="example@gmail.com" required />

                                                                <div id="emailValidationResult"></div>

                                                            </div>
                                                            <% } else { %>
                                                            <input id="userID" name="userID" value="<%= user?.id%>"
                                                                hidden />
                                                            <input id="email" name="email" value="<%= user?.email%>"
                                                                hidden />
                                                            <p class="alert alert-success"><%= user.email %></p>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <h5><i class="fa-solid fa-2 list-number"></i>
                                                            <%= lingua.car.select%>
                                                        </h5>
                                                        <hr>

                                                        <%- include('../cars/formFields.ejs', {allMakes, car: null, userCars : []}); %>

                                                        <h5><i class="fa-solid fa-3 list-number"></i>
                                                            <%= lingua.membership.selectMembership%>
                                                        </h5>
                                                        <hr>
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label for="product"
                                                                    class="required"><%= lingua.membership.name%></label>

                                                                <select id="product" name="product" required autofocus
                                                                    class="form-control mb-3 form-control-lg js-example-basic-single w-100">
                                                                    <option value=""><%= lingua.selectOne%></option>
                                                                    <% for(const price of prices) { %>
                                                                    <option value="<%= price.id%>"
                                                                        name="<%= price.product.name%>"
                                                                        price="<%= price.unit_amount%>">
                                                                        (<%= price.unit_amount%>)
                                                                        <%= price.product.name%>
                                                                    </option>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6 mt-4" id="formValidationResult"></div>

                                                        <div class="col-6 mt-3">
                                                            <div class="d-flex float-end">
                                                                <span id="addCarLoading"></span>
                                                                <button id="addSub"
                                                                    class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn float-end">
                                                                    <%= lingua.membership.completeSubscription%></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>

                                            <div class="row d-none" id="cartDiv">
                                                <h5><i class="fa-solid fa-cart-arrow-down list-number"></i>
                                                    <%= lingua.myCart%>
                                                </h5>
                                                <hr>

                                                <h5> <%= lingua.user.email%>
                                                </h5>
                                                <div id="subscriptionEmail">
                                                </div>
                                                <div class="table-responsive-sm">
                                                    <table id="cart-table" class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th><%= lingua.car.name%></th>
                                                                <th><%= lingua.car.product%></th>
                                                                <th><%= lingua.membership.price%></th>
                                                                <th><%= lingua.action%></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbody"></tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <th></th>
                                                                <th style="text-align:right">
                                                                    <%= lingua.membership.subTotal%>:</th>
                                                                <th></th>
                                                                <th></th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                                <div class="mt-3">
                                                    <input id="subscription-list" type="text" hidden value="">
                                                    <div class="col-12 float-end">

                                                        <% if(user) { %>
                                                        <button id="checkout-btn" hidden value="<%- user?.billingID%>"
                                                            email="<%- user?.email%>"
                                                            class="btn btn-block btn-checkout btn-lg font-weight-medium auth-form-btn float-end"
                                                            type="submit">
                                                            <%= lingua.membership.proceedToCheckout%>
                                                        </button>
                                                        <% } else { %>
                                                        <button id="checkout-btn" hidden
                                                            class="btn btn-block btn-checkout btn-lg font-weight-medium auth-form-btn float-end"
                                                            type="submit">
                                                            <%= lingua.membership.proceedToCheckout%>
                                                        </button>
                                                        <% } %>

                                                    </div>

                                                </div>
                                                <div class="col-12">
                                                    <span id="error-message"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <%- include('../partials/footer.ejs'); %>

        <!-- page-body-wrapper ends -->
    </div>
