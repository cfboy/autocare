<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/feather/feather.css">
    <link rel="stylesheet" href="../../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
    <link rel="stylesheet" href="../../vendors/flag-icon-css/css/flag-icon.min.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-5 col-m-6 col-sm-12 mx-auto">
                        <div class="text-center py-4 px-4 px-sm-5">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <div class="card-title d-flex flex-nowrap">
                                                <div class="brand-logo text-center mb-1 w-100">
                                                    <img src="/images/charlieBoy/CB-5.jpg" alt="logo"
                                                        style="width: 50% !important;">
                                                </div>
                                            </div>
                                            <h4 class="card-title">
                                                <%= lingua.login%>
                                            </h4>
                                            <div class="text-center">
                                                <% if (messages.error) { %>
                                                <p class="error">
                                                    <%= messages.error %>
                                                </p>
                                                <% } %>

                                                <% if (messages.info) { %>
                                                <p class="info">
                                                    <%= messages.info %>
                                                </p>
                                                <% } %>
                                                <% if (messages.warning) { %>
                                                <p class="warning">
                                                    <%= messages.warning %>
                                                </p>
                                                <% } %>
                                            </div>
                                            <form id="login-form" class="pt-3" action="/login" method="post">
                                                <div class="form-group">
                                                    <input type="email" id="email" name="email"
                                                        class="form-control form-control-lg" value="<%= email%>"
                                                        placeholder="Email address" required autofocus />
                                                </div>

                                                <div class="form-group">
                                                    <input type="password" id="password" name="password"
                                                        class="form-control mb-3 form-control-lg" placeholder="Password"
                                                        required autofocus />
                                                </div>

                                                <div class="mt-3">
                                                    <button
                                                        class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn w-100"
                                                        type="submit"><%= lingua.login%></button>
                                                </div>
                                            </form>

                                            <div class="my-2 d-flex justify-content-between align-items-center">
                                                <a href="/resetPasswordRequest"
                                                    class="auth-link text-black"><%= lingua.user.password.forgot%></a>
                                                <a href="/create-account"
                                                    class="auth-link text-black"><%= lingua.createAccount %></a>
                                            </div>
                                            <!-- <div class="mt-4 text-center">
                                                <div class="signin-other-title">
                                                    <div class="login-or">
                                                        <span>or</span>
                                                    </div>
                                                </div>
                                                <div class="google-signup">
                                                    <a id="googlesetup" class="google-btn" href="/auth/google">
                                                        <span class="google-signup-icon"></span>
                                                        <span class="google-signup-btn-text">Sign in with
                                                            Google</span>
                                                    </a>
                                                </div>
                                            </div> -->
                                            <br>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-secondary dropdown-toggle w-100"
                                                    id="dropdownMenuLang" data-bs-toggle="dropdown" aria-haspopup="true"
                                                    aria-expanded="false">
                                                    <div id="showLang" style="display: contents;">
                                                        <span id="es-lang">

                                                            <span class="flag-icon flag-icon-pr "></span> ESPAÑOL
                                                        </span>
                                                        <span id="en-lang">
                                                            <span class="flag-icon flag-icon-um "></span> ENGLISH
                                                        </span>
                                                    </div>
                                                    <%# lingua.selectLanguage%>
                                                </button>
                                                <div class="dropdown-menu w-100" aria-labelledby="dropdownMenuLang">
                                                    <a id="es-lang" href="?lang=es" class="dropdown-item">

                                                        <span class="flag-icon flag-icon-pr "></span> ESPAÑOL
                                                    </a>
                                                    <a id="en-lang" href="?lang=en" class="dropdown-item">
                                                        <span class="flag-icon flag-icon-um "></span> ENGLISH
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- content-wrapper ends -->
        </div>
        <%- include('../partials/footer.ejs'); %>

        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js "></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js "></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js "></script>
    <script src="../../js/hoverable-collapse.js "></script>
    <script src="../../js/template.js "></script>

    <!-- endinject -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.3/dist/sweetalert2.all.min.js "></script>
    <script src="./js/jquery.cookie.js" type="text/javascript"></script>

    <!-- Alerts Code -->
    <script type="text/javascript " src="./js/sweet-alerts.js "></script>
    <script src="./js/helper-functions.js"></script>

    <%- include('../partials/alerts.ejs', {message, alertType}); %>

    <script>
        $(document).ready(function () {
            manageLangDropdown();
        });
    </script>
</body>

</html>