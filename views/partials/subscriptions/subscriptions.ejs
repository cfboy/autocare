<div class="row">
    <div class="col-lg-12 d-flex flex-column">
        <div class="row flex-grow">
            <div class="col-12 col-lg-4 col-lg-12 grid-margin stretch-card">
                <div class="card card-rounded">
                    <div class="card-body">
                        <% if (!hasSubscription) { %>
                        <!-- This section of code is not used. -->
                        <p class="lead">
                            <%= lingua.membership.notPlan%>
                        </p>
                        <br>
                        <a href="/subscribe?userEmail=<%= user?.email%>"
                            class="btn btn-primary btn-icon-text text-white m-1 btn-sm-block" type="button">
                            <i class="fas fa-plus btn-icon-prepend"></i> <%= lingua.membership.createSubscriptions%>
                        </a>

                        <% } else { %>
                        <!-- Loop of subscriptions -->
                        <%- include('./information.ejs' , {invalid: false, subscriptions, showManageBtn : true, customer : user, showCreateBtn: true, user : user}); %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>