<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= lingua.service.services%></title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../css/register.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../js/select.dataTables.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap5.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />

</head>

<!-- <body class="sidebar-icon-only"> -->

<body>
    <div class="container-scroller">
        <%- include('../partials/navbar.ejs' , {user}); %>
        <div class="container-fluid page-body-wrapper">
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="d-sm-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="card-title card-title-dash"><%= lingua.service.services%>
                                                    </h4>
                                                </div>
                                            </div>
                                            <br>
                                            <div class="table-responsive  mt-1">
                                                <table id="service" class="table table-hover stripe">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>Service Details</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if(services) { %>
                                                        <% for(service of services) { %>
                                                        <tr>
                                                            <td>
                                                                <a class="btn-link" href="/service/<%- service?._id%>">

                                                                    <%- service?.id%>
                                                                </a>

                                                            </td>
                                                            <td>
                                                                <div class="row">
                                                                    <div class="col-6">
                                                                        <p>
                                                                            <i
                                                                                class="fa-solid fa-map-marker-alt fa-fw"></i>
                                                                            <%- service?.location?.name %>
                                                                        </p>
                                                                        <p>
                                                                            <i
                                                                                class="fa-solid fa-hand-sparkles fa-fw"></i>

                                                                            <%= service?.product%>
                                                                        </p>
                                                                        <p>
                                                                            <i class="fa-solid fa-calendar fa-fw"></i>

                                                                            <%= moment(service?.created_date).isValid() ? moment(service?.created_date).format(completeDateFormat) : 'N/A' %>
                                                                        </p>
                                                                        <p>
                                                                            <i class="fa-solid fa-user-check fa-fw"></i>

                                                                            <%- service?.authorizedBy?.personalInfo?.firstName + ' ' + service?.authorizedBy?.personalInfo?.lastName %>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-6">

                                                                        <p>
                                                                            <i class="fa-solid fa-car fa-fw"></i>

                                                                            <a class="btn-link"
                                                                                href="/car/<%- service?.car?.id%>">
                                                                                <%- service?.car?.brand%>
                                                                                <%- service?.car?.model%>
                                                                                (<%- service?.car?.plate%>)
                                                                            </a>
                                                                        </p>
                                                                        <p>
                                                                            <i class="fa-solid fa-user fa-fw"></i>

                                                                            <a class="btn-link"
                                                                                href="/customers/<%- service?.user?.id%>">
                                                                                <%= service.user.email%>
                                                                            </a>
                                                                        </p>
                                                                        <p>
                                                                            <% if(service?.inputType.toUpperCase() == "MANUAL") { %>
                                                                            <i class="fa-regular fa-keyboard fa-fw"
                                                                                data-toggle="tooltip"
                                                                                data-placement="bottom"
                                                                                title="Manual Input">

                                                                            </i>
                                                                            Manual
                                                                            <% } else if(service?.inputType.toUpperCase() == "SYSTEM") { %>
                                                                            <i class="fa-solid fa-video fa-fw"
                                                                                title="Camera Input"
                                                                                data-placement="bottom"
                                                                                data-toogle="tooltip"></i>
                                                                            By System/Camera
                                                                            <% } %>
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- partial:partials/_footer.html -->
        <%- include('../partials/footer.ejs'); %>
    </div>

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/chart.js/Chart.min.js"></script>
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="../vendors/progressbar.js/progressbar.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->

    <script src="../js/jquery.cookie.js" type="text/javascript"></script>

    <!-- End custom js for this page-->
    <script src="../js/helper-functions.js"></script>
    <!-- Alerts Code -->
    <%- include('../partials/alerts.ejs', {message, alertType}); %>
    <%- include('../partials/dataTable.ejs', {tableID : '#service', ordering: false}); %>
</body>

</html>