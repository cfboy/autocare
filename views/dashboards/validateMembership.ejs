    <script src="../js/settings.js"></script>
    <script src="../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->

    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <!-- <script type="text/javascript" src="../js/account.js"></script> -->
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <script src="../js/dashboard.js"></script>
    <script src="../js/Chart.roundedBarCharts.js"></script>

    <!-- End custom js for this page-->
    <script src="../js/helper-functions.js"></script>
    <!-- Alerts Code -->
    <%- include('../partials/alerts.ejs', {message, alertType}); %>

    <script>
        const socket = io('<%= domain%>');

        // Establish Route
        // socket.on('connection');

        // Send data
        // const sendMessage = () => {
        //     socket.emit('message', 'Test Message');
        // }

        socket.on('reading-plates', () => {

            showResult('#resultOfCameraScan',
                `<div class="spinner text-center">
                                <div class="spinner-grow" style="width: 2rem; height: 2rem"></div>
                            </div>`
            );
        })

        // Receive data
        socket.on('read-plates', (data) => {
            console.log(JSON.stringify(data));
            document.querySelector('#resultOfCameraScan').innerHTML = '';
            for (car of data) {
                document.querySelector('#resultOfCameraScan').innerHTML += (`
                <a id="plate-${car.plate}" class="btn btn-link" onclick="setPlateValue('${car.plate}')"> Car: ${car.plate} </a>` + '<br>')
            }
        })

        function setPlateValue(plate) {
            $("#tagNumber").val(plate);
            $("#validateMembershipBtn").click();
            $(`#plate-${plate}`).remove();
        }

        $("#validateMembershipBtn").on("click", function (event) {
            event.preventDefault();
            event.stopPropagation();
            var valueToValidate = $("#tagNumber");
            // reportValidity and checkValidity validate inputs on form.
            valueToValidate[0].reportValidity();
            if (valueToValidate[0].checkValidity()) {
                $.ajax({
                    url: "/validateMembership",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({
                        tagNumber: valueToValidate.val()
                    }),
                    beforeSend: function () {
                        showResult('#membershipDetails',
                            `<div class="spinner text-center p-5">
                                <div class="spinner-grow"></div>
                            </div>`
                        );

                    }
                }).done(function (result) {
                    showResult('#membershipDetails', result);
                    // cleanInput("tagNumber");
                }).fail(function (err) {
                    console.log(err);
                })
            }
        });


        var showResult = function (updateDiv, result) {
            $(updateDiv).html(result);
        }
        var cleanInput = function (input) {
            var removeThis = document.getElementById(input);
            removeThis.value = '';
        }
    </script>
</body>

</html>