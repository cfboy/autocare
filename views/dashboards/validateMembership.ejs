<body>
    <div class="container-scroller">
        <%- include('../partials/navbar.ejs' , {user}); %>
        <div class="container-fluid page-body-wrapper">
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-4 p-3">
                                                    <h4>Validate</h4>
                                                    <br>
                                                    <div class="card p-3">
                                                        <h5>Read By Camera: </h5>
                                                        <div id="resultOfCameraScanLoading"></div>
                                                        <div id="resultOfCameraScan">
                                                            <% if(readingQueue?.length > 0) { %>
                                                            <% for(car of readingQueue) { %>
                                                            <a id="plate-<%= car.plate%>" class="btn btn-link"
                                                                onclick="setPlateValue(<%= car.plate%>)">
                                                                Car : <%= car.plate%>
                                                            </a>
                                                            <br>
                                                            <% } %>
                                                            <% } else { %>
                                                            N/A
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div class="card p-3">
                                                        <h5>Manual Input: </h5>

                                                        <form id="form-validate-membership" class="pt-3" method="post">
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <div class="form-group">
                                                                        <label class="required" for="name">Tag
                                                                            Number</label>
                                                                        <input autocomplete="off" type="text"
                                                                            id="tagNumber" name="tagNumber"
                                                                            class="form-control form-control-lg text-uppercase"
                                                                            required />

                                                                    </div>
                                                                </div>
                                                                <!-- </div>
                                                                <div class="row"> -->
                                                                <div class="mt-3 mb-3">
                                                                    <button id="validateMembershipBtn"
                                                                        class="btn btn-block btn-inverse-dark btn-lg font-weight-medium auth-form-btn float-end"
                                                                        type="submit">Validate</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8">
                                                    <!-- Render results in membershipDetails div -->
                                                    <div class="membershipDetails" id="membershipDetails"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
