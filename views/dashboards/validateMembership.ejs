<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= lingua.membership.validate%></title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css"> -->
    <link rel="stylesheet" href="../js/select.dataTables.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap5.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />

</head>

<body>
    <div class="container-scroller">
        <%- include('../partials/navbar.ejs' , {user}); %>
        <div class="container-fluid page-body-wrapper">
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="d-sm-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="card-title card-title-dash">
                                                        <%= lingua.membership.validate%></h4>
                                                </div>
                                            </div>
                                            <br>
                                            <div class="row">
                                                <div class="col-lg-4 p-3">
                                                    <div class="card p-3">
                                                        <div
                                                            class="d-sm-flex justify-content-between align-items-start">
                                                            <h5><%= lingua.membership.readyByCamera%>:</h5>

                                                            <button id="clearQueueBtn"
                                                                class="btn btn-sm btn-outline-dark p-2 br-5"><%= lingua.clear%></button>
                                                        </div>
                                                        <div id="resultOfCameraScan">
                                                            <% if(readingQueue?.length > 0) { %>
                                                            <% for(car of readingQueue) { %>
                                                            <a id="plate-<%= car.plate%>" class="btn btn-link"
                                                                onclick="setPlateValue('<%= car.plate%>')">
                                                                <b><%= car.plate%></b>
                                                            </a>
                                                            <br>
                                                            <% } %>
                                                            <% } %>
                                                        </div>
                                                        <div style="height: 10px !important"
                                                            id="resultOfCameraScanLoading">

                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div class="card p-3">
                                                        <h5><%= lingua.membership.manualInput%>:</h5>

                                                        <form id="form-validate-membership" class="pt-3" method="post">
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <div class="form-group">
                                                                        <label class="required" for="name">
                                                                            <%= lingua.car.plateNumber%></label>
                                                                        <input autocomplete="off" type="text"
                                                                            onchange="setInputType('Manual')"
                                                                            id="plateNumber" name="plateNumber"
                                                                            class="form-control form-control-lg text-uppercase"
                                                                            required />

                                                                    </div>
                                                                </div>
                                                                <!-- </div>
                                                                <div class="row"> -->
                                                                <div class="mt-3 mb-3">
                                                                    <input type="hidden" id="inputType" name="inputType"
                                                                        value="User" />
                                                                    <button id="validateMembershipBtn"
                                                                        class="btn btn-block btn-inverse-dark btn-lg font-weight-medium auth-form-btn float-end"
                                                                        type="submit"><%= lingua.validate%></button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8 p-3">
                                                    <!-- Render results in membershipDetails div -->
                                                    <div class="membershipDetails" id="membershipDetails"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- partial:partials/_footer.html -->
        <%- include('../partials/footer.ejs'); %>
    </div>
    <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/chart.js/Chart.min.js"></script>
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="../vendors/progressbar.js/progressbar.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <script src="../js/settings.js"></script>
    <script src="../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->

    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript" src="../js/account.js"></script>
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <script src="../js/dashboard.js"></script>
    <script src="../js/Chart.roundedBarCharts.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <!-- End custom js for this page-->
    <script src="../js/helper-functions.js"></script>
    <!-- Alerts Code -->
    <%- include('../partials/alerts.ejs', {message, alertType}); %>
    <%# include('../partials/dataTable.ejs', {tableID : '#users'}); %>

    <script>

        $("#plateNumber").on({
            keydown: function (e) {
                if (e.which === 32)
                    return false;
            },
            change: function () {
                this.value = this.value.replace(/\s/g, "");
            }
        });
        // The socket is already define on navbar.
        socket.on('reading-plates', () => {
            showResult('#resultOfCameraScanLoading', '<p>Reading...</p>')
        })

        socket.on('stop-reading-plates', () => {
            showResult('#resultOfCameraScanLoading', '')
        })

        // Receive data
        socket.on('read-plates', (data) => {
            console.log('New Plate: ' + data.plate)
            if (data.plate) {
                console.log(JSON.stringify(data));
                document.querySelector('#resultOfCameraScanLoading').innerHTML = '';
                document.querySelector('#resultOfCameraScan').innerHTML += (`
                    <a id="plate-${data.plate}" class="btn btn-link" onclick="setPlateValue('${data.plate}')"><b>${data.plate}</b></a>` + '<br>')
            }
        })

        function setInputType(value) {
            $("#inputType").val(value);
            console.log($("#inputType").val())
        }

        function setPlateValue(plate) {
            $("#plateNumber").val(plate);
            setInputType('System');
            $("#validateMembershipBtn").click();
            $(`#plate-${plate}`).remove();
        }

        $("#validateMembershipBtn").on("click", function (event) {
            event.preventDefault();
            event.stopPropagation();
            var valueToValidate = $("#plateNumber");
            var inputType = $('#inputType');
            // reportValidity and checkValidity validate inputs on form.
            valueToValidate[0].reportValidity();
            if (valueToValidate[0].checkValidity()) {
                $.ajax({
                    url: "/validateMembership",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({
                        plateNumber: valueToValidate.val(),
                        inputType: inputType.val()
                    }),
                    beforeSend: function () {
                        showResult('#membershipDetails',
                            `<div class="spinner text-center p-5">
                                <div class="spinner-grow"></div>
                            </div>`
                        );

                    }
                }).done(function (result) {
                    showResult('#membershipDetails', result);
                    // cleanInput("plateNumber");
                }).fail(function (err) {
                    console.log(err);
                })
            }
        });

        $("#clearQueueBtn").on("click", function (event) {
            event.preventDefault();
            event.stopPropagation();

            $.ajax({
                url: "/clearQueue",
                type: "POST",
                contentType: "application/json",
                data: {},
            }).done(function (result) {
                document.querySelector('#resultOfCameraScan').innerHTML = ('')
            }).fail(function (err) {
                console.log(err);
            })

        });

        var showResult = function (updateDiv, result) {
            $(updateDiv).html(result);
        }
        var cleanInput = function (input) {
            var removeThis = document.getElementById(input);
            removeThis.value = '';
        }
    </script>
</body>

</html>