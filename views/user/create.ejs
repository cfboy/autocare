<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= lingua.user.create%></title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../css/register.css">
    <link rel="stylesheet" href="../vendors/select2/select2.min.css">
    <link rel="stylesheet" href="../vendors/select2-bootstrap-theme/select2-bootstrap.min.css">

    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css"> -->
    <link rel="stylesheet" href="../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />
</head>

<body class="sidebar-icon-only">
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/navbar.ejs' , {user}); %>
        <!-- partial -->

        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <h4><%= lingua.user.create%></h4>
                                            <form id="form-create-user" class="pt-3" action="/create-user"
                                                method="post">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="required"
                                                                for="email"><%= lingua.user.email%></label>
                                                            <input autocomplete="off" type="email" id="email"
                                                                name="email" class="form-control form-control-lg"
                                                                placeholder="example@gmail.com" required />

                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <%- include('./passwordField.ejs'); %>
                                                    </div>
                                                    <div class="col-lg-6">

                                                        <div class="form-group">
                                                            <label for="firstName"
                                                                class="required"><%= lingua.user.firstName%></label>

                                                            <input type="text" id="firstName" name="firstName"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="<%= lingua.user.firstName%>" required
                                                                autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="lastName"
                                                                class="required"><%= lingua.user.lastName%></label>

                                                            <input type="text" id="lastName" name="lastName"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="<%= lingua.user.lastName%>" required
                                                                autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="phoneNumber"
                                                                class="required"><%= lingua.user.phoneNumber%></label>

                                                            <input type="tel" id="phoneNumber" name="phoneNumber"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="XXX-XXX-XXXX" required autofocus />
                                                        </div>
                                                    </div>
                                                    <!-- <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="dateOfBirth"
                                                                class="required"><%= lingua.user.dateOfBirth%></label>
                                                            <input type="text" id="dateOfBirth"
                                                                onfocus="(this.type='date')" name="dateOfBirth"
                                                                placeholder="mm/dd/yyyy"
                                                                class="form-control mb-3 form-control-lg" required
                                                                autofocus />
                                                        </div>
                                                    </div> -->
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="required"
                                                                for="role"><%= lingua.user.role%></label>
                                                            <select name="role" id="role"
                                                                class="form-control form-control-lg">
                                                                <option value=""><%= lingua.selectOne%></option>
                                                                <% for(const [key, value] of selectRoles) { %>
                                                                <option value="<%= value %>"><%= key %></option>
                                                                <% }%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <!-- <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="city"
                                                                class="required"><%= lingua.user.city%></label>

                                                            <select id="city" name="city" required
                                                                class="form-control mb-3 form-control-lg js-example-basic-single w-100">
                                                                <option value=""><%= lingua.selectOne%></option>
                                                                <% for(const municipality of municipalities) { %>
                                                                <option value="<%= municipality%>"><%= municipality%>
                                                                </option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div> -->
                                                </div>
                                                <div class="row">
                                                    <div class="mt-3">

                                                        <a href="/account"
                                                            class="btn btn-block btn-light btn-lg font-weight-medium auth-form-btn float-end"><%= lingua.cancel%></a>

                                                        <button
                                                            class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn float-end"
                                                            type="submit"><%= lingua.save%></button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs'); %>
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="../vendors/progressbar.js/progressbar.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <script src="../js/settings.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->

    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <script src="../js/dashboard.js"></script>
    <script src="../../js/register.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="../vendors/select2/select2.min.js"></script>
    <script src="../js/select2.js"></script>
    <!-- End custom js for this page-->

    <%- include('../partials/alerts.ejs', {message, alertType}); %>
    <script>
        jQuery(document).ready(function () { jQuery("#phoneNumber").mask("999-999-9999"); });
    </script>
</body>


</html>