<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>View User </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../css/register.css">

    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />
</head>

<body class="sidebar-icon-only">
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/navbar.ejs'); %>

            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_sidebar.html -->
                <%- include('../partials/sidebar.ejs'); %>
                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">
                            <h4>View User</h4>
                            <% if(user) {%>
                                <div class="row text-left">
                                    <div class="col-lg-12 d-flex flex-column">
                                        <div class="row flex-grow">
                                            <div class="col-6 grid-margin stretch-card">
                                                <div class="card card-rounded">
                                                    <div class="card-body">
                                                        <div class="table-responsive mt-1">
                                                            <div class="d-sm-flex justify-content-between align-items-start float-end">
                                                                <a href="/edit-user/<%- user.id%>?url=view-user/<%- user.id%>" data-id="user" type="button" class="btn btn-primary btn-icon-text">
                                                                    <i class=" mdi mdi-square-edit-outline"></i> Edit
                                                                </a>
                                                            </div>
                                                            <table class="table table-hover">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Personal Information</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>Email</td>
                                                                        <td>
                                                                            <%- user.email%>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>Name</td>
                                                                        <td>
                                                                            <%- user.personalInfo.firstName + ' ' + user.personalInfo.lastName %>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>Phone Number</td>
                                                                        <td>
                                                                            <%- user.personalInfo.phoneNumber %>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>Birth Date</td>
                                                                        <td>
                                                                            <%= moment(user.personalInfo.dateOfBirth).isValid() ? moment(user.personalInfo.dateOfBirth).utc().format(shortDateFormat) : 'N/A' %>

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6 grid-margin stretch-card">
                                                <div class="card card-rounded">
                                                    <div class="card-body">
                                                        <div class="table-responsive  mt-1">
                                                            <table class="table table-hover">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Membership Information</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>Plan</td>
                                                                        <td>
                                                                            <%- user.membershipInfo.plan%>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>End Date</td>
                                                                        <td>
                                                                            <%= moment(user.membershipInfo.endDate).isValid() ? moment(user.membershipInfo.endDate).utc().format(shortDateFormat) : 'N/A' %>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6 grid-margin stretch-card">
                                                <div class="card card-rounded">
                                                    <div class="card-body">
                                                        <div class="table-responsive  mt-1">
                                                            <table class="table table-hover">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Car Information</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>Brand</td>
                                                                        <td>
                                                                            <%- user.carInfo.brand%>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>Model</td>
                                                                        <td>
                                                                            <%- user.carInfo.model%>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>Plate</td>
                                                                        <td>
                                                                            <%- user.carInfo.plate%>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }%>
                        </div>
                    </div>
            </div>
    </div>
    <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/chart.js/Chart.min.js"></script>
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="../vendors/progressbar.js/progressbar.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <script src="../js/settings.js"></script>
    <script src="../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script>
        var user = <%- JSON.stringify(user) %>;
        console.log(user);
    </script>
    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript" src="../js/account.js"></script>
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <script src="../js/dashboard.js"></script>
    <script src="../js/Chart.roundedBarCharts.js"></script>
    <script src="../../js/register.js"></script>

    <!-- End custom js for this page-->

    <!-- Alerts Code -->
    <%- include('../partials/alerts.ejs', {message, alertType}); %>
</body>

</html>