<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>View User </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">

    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css"> -->
    <link rel="stylesheet" href="../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />
</head>

<body class="sidebar-icon-only">
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/navbar.ejs' , {user}); %>

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <% if(customer) { %>
                    <div class="row text-left">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-sm-12 col-md-6 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="d-sm-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="card-title card-title-dash">
                                                        <% if(isMyProfile) {%>
                                                        My Profile
                                                        <% } else { %>
                                                        View User
                                                        <% } %></h4>
                                                </div>
                                                <div
                                                    class="d-sm-flex justify-content-between align-items-start float-end">
                                                    <a href="/changePassword/<%- customer.id%>?url=/customers"
                                                        type="button" class="btn btn-primary btn-icon-text me-2">
                                                        <i class="fa-solid fa-key"></i> Change Password
                                                    </a>
                                                    <a href="/edit-user/<%- customer.id%>?url=/customers" data-id="user"
                                                        type="button" class="btn btn-primary btn-icon-text">
                                                        <i class="fa-solid fa-user-pen"></i> Edit Personal Info
                                                    </a>
                                                </div>
                                            </div>
                                            <br>

                                            <div class="table-responsive mt-1">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Personal Information</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Email</td>
                                                            <td>
                                                                <%- customer.email%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <!-- <td>Password</td>
                                                            <td id="password">
                                                                <!- <%# customer.password%> -->
                                                            <!-- ********* -->
                                                            <!-- </td> -->
                                                        </tr>
                                                        <tr>
                                                            <td>Role</td>
                                                            <td>
                                                                <%- customer.role%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Name</td>
                                                            <td>
                                                                <%- customer.personalInfo.firstName + ' ' + customer.personalInfo.lastName %>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Phone Number</td>
                                                            <td>
                                                                <%- customer.personalInfo.phoneNumber %>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Birth Date</td>
                                                            <td>
                                                                <%= moment(customer.personalInfo.dateOfBirth).isValid() ? moment(customer.personalInfo.dateOfBirth).utc().format(shortDateFormat) : 'N/A' %>

                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>City</td>
                                                            <td>
                                                                <%- customer.personalInfo.city %>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% if(cars) { %>
                                <div class="col-sm-12 col-md-6 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <div class="d-sm-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="card-title card-title-dash">Cars</h4>
                                                </div>
                                            </div>
                                            <br>
                                            <div class="table-responsive  mt-1">
                                                <table id="users" class="table table-hover stripe">
                                                    <thead>
                                                        <tr>
                                                            <th>Brand</th>
                                                            <th>Model</th>
                                                            <th>Plate</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if(cars) { %>
                                                        <% for(car of cars) { %>
                                                        <% let enableActions = (user.role === roles.ADMIN || car?.services?.length < 1) %>

                                                        <tr>
                                                            <td>
                                                                <a class="btn-link"
                                                                    href="/car/<%- car.id%>"><%- car.brand%></a>
                                                            </td>

                                                            <td><%- car.model%></td>
                                                            <td><%- car.plate%></td>

                                                            <td>
                                                                <% if(enableActions) { %>
                                                                <a href="/edit-car/<%- car.id%>?url=/cars" type="button"
                                                                    class="btn btn-icon btn-icon-no-border no-margin">
                                                                    <i class="far fa-edit icon-sm"></i>
                                                                </a>

                                                                <a id="deleteBtn"
                                                                    onclick="return confirmDelete('/delete-car', '<%- car.id%>')"
                                                                    class="btn btn-icon btn-icon-no-border no-margin">
                                                                    <i class="fas fa-trash-alt icon-sm text-danger"></i>
                                                                </a>
                                                                <% } else { %>
                                                                N/A
                                                                <% } %>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% if(customer.hasSubscription){ %>
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <%- include('../partials/subscriptions/information.ejs' , {templateTitle: "Memberships", subscriptions, showManageBtn : true, customer : customer, showCreateBtn: false}); %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs'); %>
    </div>

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/chart.js/Chart.min.js"></script>
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="../vendors/progressbar.js/progressbar.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End custom js for this page-->
    <script type="text/javascript" src="../js/account.js"></script>

    <!-- Alerts Code -->
    <%- include('../partials/alerts.ejs', {message, alertType}); %>
</body>

</html>