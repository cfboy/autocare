<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Edit User </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/typicons/typicons.css">
    <link rel="stylesheet" href="../vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../css/register.css">
    <link rel="stylesheet" href="../vendors/select2/select2.min.css">
    <link rel="stylesheet" href="../vendors/select2-bootstrap-theme/select2-bootstrap.min.css">

    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../images/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="sidebar-icon-only">
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <%- include('../partials/navbar.ejs' , {user}); %>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include('../partials/sidebar.ejs' , {user}); %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-column">
                            <div class="row flex-grow">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card card-rounded">
                                        <div class="card-body">
                                            <h4>Edit User</h4>
                                            <!-- <h6 class="fw-light">Sign in to continue.</h6> -->
                                            <% if(customer) { %>
                                            <form id="form-register" class="pt-3" action="/edit-user/?url=<%- url%>"
                                                method="post">
                                                <input type="text" id="id" name="id" value="<%- customer.id%>" hidden />
                                                <div class="row">
                                                    <% if(user.role === roles.ADMIN) { %>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="required" for="email">Email</label>
                                                            <input value="<%- customer.email%>" type="email" id="email"
                                                                name="email" class="form-control form-control-lg"
                                                                placeholder="example@gmail.com" required />

                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="required" for="role">Role</label>
                                                            <select name="role" id="role"
                                                                class="form-control form-control-lg">
                                                                <option value="">Select Role</option>
                                                                <% for(const [key, value] of selectRoles) { %>
                                                                <% var selected = (value == customer.role) ? "selected" : "";   %>

                                                                <option value="<%= value %>" <%=selected%>><%= key %>
                                                                </option>
                                                                <% }%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="firstName" class="required">First Name</label>

                                                            <input value="<%- customer.personalInfo.firstName%>"
                                                                type="text" id="firstName" name="personalInfo.firstName"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="First Name" required autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="lastName" class="required">Last Name</label>

                                                            <input value="<%- customer.personalInfo.lastName%>"
                                                                type="text" id="lastName" name="personalInfo.lastName"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="LastName" required autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="phoneNumber" class="required">Phone
                                                                Number</label>

                                                            <input value="<%- customer.personalInfo.phoneNumber%>"
                                                                type="tel" id="phoneNumber"
                                                                name="personalInfo.phoneNumber"
                                                                class="form-control mb-3 form-control-lg"
                                                                placeholder="XXX-XXX-XXXX" required autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="dateOfBirth" class="required">Date Of
                                                                Birth</label>

                                                            <input
                                                                value="<%- moment(customer.personalInfo.dateOfBirth).utc().format('YYYY-MM-DD')%>"
                                                                type="date" id="dateOfBirth"
                                                                name="personalInfo.dateOfBirth"
                                                                class="form-control mb-3 form-control-lg" required
                                                                autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="city" class="required">City</label>
                                                            <select id="city" name="personalInfo.city" required
                                                                class="form-control mb-3 form-control-lg js-example-basic-single w-100">
                                                                <option value="">Select One</option>
                                                                <% for(const municipality of municipalities) { %>
                                                                <% var selected = (customer?.personalInfo?.city == municipality) ? "selected" : "";   %>
                                                                <option value="<%= municipality%>" <%= selected%>>
                                                                    <%= municipality%>
                                                                </option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="mt-3">
                                                        <a href="<%- url%>"
                                                            class="btn btn-block btn-light btn-lg font-weight-medium auth-form-btn float-end">Cancel</a>

                                                        <button
                                                            class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn float-end"
                                                            type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </form>

                                            <% }%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs'); %>
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript" src="../js/account.js"></script>
    <script src="../js/jquery.cookie.js" type="text/javascript"></script>
    <script src="../js/dashboard.js"></script>
    <!-- <script src="../js/Chart.roundedBarCharts.js"></script> -->
    <script src="../vendors/select2/select2.min.js"></script>
    <script src="../js/select2.js"></script>
    <!-- End custom js for this page-->
    <script>
        jQuery(document).ready(function () { jQuery("#phoneNumber").mask("999-999-9999"); });
    </script>
</body>

</html>