                            <h4>Edit User</h4>
                            <!-- <h6 class="fw-light">Sign in to continue.</h6> -->
                            <% if(customer) {%>
                                <form id="form-register" class="pt-3" action="/edit-user/" method="post">
                                    <input type="text" id="id" name="id" value="<%- customer.id%>" hidden />
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="required" for="email">Email</label>
                                                <input value="<%- customer.email%>" type="email" id="email" name="email" class="form-control form-control-lg" placeholder="example@gmail.com" required />

                                            </div>

                                            <div class="form-group">
                                                <label for="password" class="required">Password</label>

                                                <input value="<%- customer.password%>" type="password" id="password" name="password" class="form-control mb-3 form-control-lg" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                    placeholder="Password" required disabled/>
                                                <div id="message">
                                                    <p>Password must contain the following:</p>
                                                    <p> <span id="letter" class="invalid"> <b>1 lowercase letter</b> </span>, <span id="capital" class="invalid"><b>1 capital (uppercase) letter</b></span>, <span id="number" class="invalid"> <b>1 number</b></span>,
                                                        <span id="length" class="invalid"> <b>8 characters</b></span>
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="firstName" class="required">First Name</label>

                                                <input value="<%- customer.personalInfo.firstName%>" type="text" id="firstName" name="personalInfo.firstName" class="form-control mb-3 form-control-lg" placeholder="First Name" required autofocus />
                                            </div>

                                            <div class="form-group">
                                                <label for="lastName" class="required">Last Name</label>

                                                <input value="<%- customer.personalInfo.lastName%>" type="text" id="lastName" name="personalInfo.lastName" class="form-control mb-3 form-control-lg" placeholder="LastName" required autofocus />
                                            </div>

                                            <div class="form-group">
                                                <label for="phoneNumber" class="required">Phone Number</label>

                                                <input value="<%- customer.personalInfo.phoneNumber%>" type="tel" id="phoneNumber" name="personalInfo.phoneNumber" class="form-control mb-3 form-control-lg" placeholder="XXX-XXX-XXXX" required autofocus />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="dateOfBirth" class="required">Date Of Birth</label>

                                                <input value="<%- moment(customer.personalInfo.dateOfBirth).utc().format('YYYY-MM-DD')%>" type="date" id="dateOfBirth" name="personalInfo.dateOfBirth" class="form-control mb-3 form-control-lg" required autofocus />
                                            </div>
                                            <div class="form-group">
                                                <label for="city" class="required">City</label>

                                                <input value="<%- customer.personalInfo.city%>" type="text" id="city" name="personalInfo.city" class="form-control form-control-lg" placeholder="City" required autofocus />
                                            </div>
                                            <div class="form-group">
                                                <label for="carBrand" class="sr-only">Car Brand</label>

                                                <input value="<%- customer.carInfo.brand%>" type="text" id="carBrand" name="carInfo.brand" class="form-control mb-3 form-control-lg" placeholder="Car Brand" autofocus />
                                            </div>
                                            <div class="form-group">
                                                <label for="carModel" class="sr-only">Car Model</label>

                                                <input value="<%- customer.carInfo.model%>" type="text" id="carModel" name="carInfo.model" class="form-control mb-3 form-control-lg" placeholder="Car Model" autofocus />
                                            </div>
                                            <div class="form-group">
