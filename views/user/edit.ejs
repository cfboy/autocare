                                                <input value="<%- customer.carInfo.plate%>" type="text" id="carPlate" name="carInfo.plate" class="form-control mb-3 form-control-lg" placeholder="Car Plate" autofocus />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="mt-3">

                                            <a href="/account" class="btn btn-block btn-light btn-lg font-weight-medium auth-form-btn float-end">Cancel</a>

                                            <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn float-end" type="submit">Save</button>
                                        </div>
                                    </div>
                                </form>

                                <% }%>
